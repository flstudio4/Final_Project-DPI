<% provide(:title, "Home") %>

<h1><%= "Hello, " + current_user.username.capitalize %></h1>

<div class="row">
  <div class="col">
    <div class="card mx-auto mb-3" style="max-width: 500px;">
      <img src="<%= current_user.avatar %>" class="img-fluid img-thumbnail rounded float-start" alt="Profile image" style="max-width: 500px;">
    </div>
  </div>
  <div class="col">

    <div class="card mx-auto mb-3">
      <div class="card-header">
        Location
      </div>
      <div class="card-body">
        <h3><%= current_user.country + ", " %><%= current_user.state + ", " %><%= current_user.city %></h3>
      </div>
    </div>

    <div class="card mx-auto mb-3">
      <div class="card-header">
        Bio
      </div>
      <div class="card-body">
        <p><%= current_user.bio %></p>
      </div>
    </div>

    <div class="card mx-auto mb-3">
      <div class="card-header">
        Info
      </div>
      <div class="card-body">
        <p>Chats -</p>
        <p>Messages sent -</p>
        <p>Visitors -</p>
      </div>
    </div>

    <div class="card mx-auto mb-3">
      <a href="<%= edit_user_registration_path %>" class="btn btn-outline-primary mb-1 col-6 d-md-block mt-3 mx-auto">
        <i class="fa-solid fa-pen-to-square" style="color: #585555;"></i>&nbsp;Edit profile
      </a>
      <a href="<%= destroy_user_session_path %>" data-turbo-method="delete" class="btn btn-outline-primary mb-1 col-6 d-md-block mb-3 mx-auto">
        <i class="fa-solid fa-right-from-bracket" style="color: #585555;"></i>&nbsp;Sign out
      </a>
    </div>
  </div>
</div>








