<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Singles</h1>
      <h2 class="text-center">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label "Enter your email", class: "mb-2" %>
          <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-outline-primary btn-block mt-2" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>