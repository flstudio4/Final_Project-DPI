<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>
  <div class="container p-5">
    <div class="form-inputs col-12">
      <div class="form-group mt-2">
        <%= f.input :password,
                    label: "New password",
                    required: false,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: 'form-control', autocomplete: "new-password" } %>
      </div>
      <div class="form-group mt-2">
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: false,
                    input_html: { class: 'form-control', autocomplete: "new-password" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: 'btn btn-primary mt-2' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
</div>