<% provide(:title, "Chat with #{ @chat.receiver.username.capitalize }") %>
<% content_for :h1, "Chat with #{ @chat.receiver.username.capitalize }" %>

<div class="container">
  <%= link_to 'Back to chats', chats_path, class: 'btn btn-outline-primary mb-3' %>
  <div class="card col-12 mx-auto">
    <div class="card-body">

      <% @chat.messages.each do |message| %>
        <% user = User.where(id: [message.author_id]) %>
      <%= user[0].username.capitalize %> : <%= message.content %><hr>
      <% end %>
      <%= render "messages/form" %>
    </div>
  </div>
  <div class="card-footer">
  </div>
</div>


