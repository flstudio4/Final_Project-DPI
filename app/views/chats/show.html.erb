<script>
    document.addEventListener('turbo:submit-end', (event) => {
        if (event.detail.success) {
            const form = document.getElementById('new_message_form');
            if (form) {
                form.reset();
            }
        }
    });
</script>

<%= stylesheet_link_tag "chats" %>

<% if current_user == @chat.sender %>
  <% provide(:title, "Chat with #{@chat.receiver.name.capitalize}") %>
<% else %>
  <% provide(:title, "Chat with #{@chat.sender.name.capitalize}") %>
<% end %>

<div class="container my-4">
  <div class="card" style="height: calc(100vh - 150px);">
    <div class="card-header d-flex justify-content-between align-items-center">
      <%= link_to 'Back to chats', chats_path, class: 'btn btn-outline-primary me-auto' %>

      <div class="d-flex flex-grow-1 justify-content-center align-items-center">
        <% if current_user == @chat.sender %>
          <%= link_to image_tag(@chat.receiver.avatar.url, class: 'rounded-circle', width: 40, height: 40), "/profiles/#{@chat.receiver_id}" %>&nbsp;
          <h4 class="mb-0"><%= "Chat with #{@chat.receiver.name.capitalize}" %></h4>
        <% else %>
          <%= link_to image_tag(@chat.sender.avatar.url, class: 'rounded-circle', width: 40, height: 40), "/profiles/#{@chat.sender_id}" %>&nbsp;
          <h4 class="mb-0"><%= "Chat with #{@chat.sender.name.capitalize}" %></h4>
        <% end %>
      </div>
    </div>
    <div class="card-body" style="overflow-y: auto; height: calc(100vh - 150px);">
      <ul class="list-unstyled" id="messages">
        <% @messages.each do |message| %>
          <li id="message_<%= message.id %>" class="px-2" style="margin-bottom: 5px;">
            <div class="d-flex align-items-start">
              <!-- Avatar with original size -->
              <%= link_to image_tag(message.author.avatar.url, class: 'rounded-circle', width: 40, height: 40), "/profiles/#{message.author.id}" %>

              <!-- Message Content with Delete Button aligned to first line -->
              <div class="flex-grow-1 ms-2" style="width: calc(100% - 50px);"> <!-- Adjust width as necessary -->
                <!-- Message Box -->
                <div>
                  <!-- Username with comma, Date and Time in AM/PM format -->
                  <div class="mb-1">
                    <%= link_to message.author.name.capitalize, "/profiles/#{message.author.id}", class: '', style: 'font-size: 1.2em; color: cornflowerblue; text-decoration: none;' %>
                    <span class="text-muted" style="font-size: 0.75em;"><%= message.created_at.in_time_zone('Central Time (US & Canada)').strftime("%-d %b %Y, %l:%M %p") %></span>
                  </div>
                  <!-- Message Content and Delete Button on the same line -->
                  <div class="d-flex align-items-center">
                    <div class="rounded px-2 py-1" style="background-color: white; word-wrap: break-word; flex-grow: 1;">
                      <p class="mb-0" style="word-break: break-word;"><%= message.content %></p>
                    </div>
                    <% if message.author_id == current_user.id %>
                      <div class="ms-2"> <!-- Margin from the message body -->
                        <%= link_to message_path(message),
                                    method: :delete,
                                    data: { turbo_method: :delete },
                                    title: 'Delete Message' do %>
                          <i class="fa fa-trash text-danger"></i>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="card-footer">
      <%= turbo_frame_tag "new_message" do %>
        <%= render "messages/form", message: Message.new(chat_id: @chat.id) %>
      <% end %>
    </div>
  </div>
</div>

<script>
    // Function to scroll to the bottom of the chat
    function scrollToBottom() {
        var messagesContainer = document.querySelector('.card-body');
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    // Scroll to the bottom when Turbo loads the page
    document.addEventListener('turbo:load', scrollToBottom);

    // MutationObserver to detect when new messages are added and scroll to bottom
    var observer = new MutationObserver(function (mutations) {
        mutations.forEach(function (mutation) {
            if (mutation.addedNodes.length) {
                scrollToBottom();
            }
        });
    });

    // Start observing the target node for configured mutations
    observer.observe(document.getElementById('messages'), {childList: true, subtree: true});

    // Disconnect the observer when it's no longer needed to prevent memory leaks
    function disconnectObserver() {
        observer.disconnect();
    }


    document.addEventListener('turbo:load', function () {
        var textarea = document.querySelector('.chat-textarea');

        function resizeTextarea() {
            textarea.style.height = '0'; // Reset the height
            textarea.style.height = textarea.scrollHeight + 'px'; // Set new height
        }

        function resetTextareaHeight() {
            textarea.style.height = ''; // Reset to default CSS height
        }

// Attach the event listener
        if (textarea) {
            textarea.addEventListener('input', resizeTextarea);
            resizeTextarea(); // Adjust for initial content
        }

// Adjusting the form submission logic
        var messageForm = document.getElementById('new_message_form');
        if (messageForm) {
            messageForm.addEventListener('submit', function () {
// After successful message send, reset the textarea
                resetTextareaHeight();

            });
        }
    });
</script>