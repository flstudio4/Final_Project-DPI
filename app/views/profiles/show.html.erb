<h1><%= @user.username.capitalize + ", " %><%= @user.age %></h1>

<div class="row">
  <div class="col">
    <div class="card mx-auto mb-3" style="max-width: 500px">
      <%= image_tag(@user.avatar, class: "img-fluid img-thumbnail rounded float-start", alt: "Profile image", style: "max-width: 500px;") %>
    </div>
  </div>

  <div class="col">

    <div class="card mx-auto mb-3">
      <div class="card-header">
        Location
      </div>
      <div class="card-body">
        <h3><%= @user.country + ", " %><%= @user.state + ", " %><%= @user.city %></h3>
      </div>
    </div>

    <div class="card mx-auto mb-3">
      <div class="card-header">
        Bio
      </div>
      <div class="card-body">
        <p><%= @user.bio %></p>
      </div>
    </div>
    <div class="card mx-auto mb-3">
      <button type="button" class="btn btn-outline-primary mb-1 col-6 d-md-block mx-auto mt-3" data-bs-toggle="modal" data-bs-target="#<%= @user.username %>">
        Message
      </button>
      <button type="button" class="btn btn-outline-primary mb-1 col-6 d-md-block mx-auto">Add to favorites</button>
      <button type="button" class="btn btn-outline-danger mb-1 col-6 d-md-block mx-auto">Block</button>
      <%= link_to "Return Back", request.referer, class: "btn btn-outline-primary mb-3 mt-5 col-3 mx-auto d-md-block" %>
    </div>
  </div>
</div>

<!-- Modal for sending message start -->

<div class="modal fade" id="<%= @user.username %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New message
          to <%= @user.username.capitalize %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal for sending message end -->







