<%= search_form_for @q, url: profiles_path, method: :get, html: { class: "form-search" } do |f| %>
  <p class="mb-3">Narrow results:</p>

  <div class="mb-3">
    <%= f.label :state_cont, "Enter state", class: "form-label" %>
    <%= f.text_field :state_cont, placeholder: "Enter state", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :city_cont, "Enter city", class: "form-label" %>
    <%= f.text_field :city_cont, placeholder: "Enter city", class: "form-control" %>
  </div>
  <div class="d-grid col-6 mx-auto">
  <%= f.submit "Search", class: "btn btn-outline-primary mb-2" %>

  <a href="/profiles" class="btn btn-outline-secondary mb-2">Clear filters</a>
  </div>
<% end %>


