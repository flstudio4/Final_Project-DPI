<form action="/search" method="get">

  <div class="input-group mb-3">
    <label class="input-group-text" for="inputGroupSelect01">Country</label>
    <select class="form-select" name="country" id="inputGroupSelect01">
      <option selected></option>
      <option value="United States">United States</option>
    </select>
  </div>
  <div class="input-group mb-3">
    <label class="input-group-text" for="inputGroupSelect01">State</label>
    <select class="form-select" name="state" id="inputGroupSelect01">
      <option selected></option>
      <%= render partial: "list_of_states" %>
    </select>
  </div>
  <div class="input-group input-group-sm mb-3">
    <span class="input-group-text" id="inputGroup-sizing-sm">City</span>
    <input type="text" name="city" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
  </div>
  <label for="age_min">Age min</label>
  <input oninput="updateSlider()" class="form-range" id="age_min" name="age_min" type=range step="1" min="18" max="40" value="18"><span id="age">18</span><br>
  <label for="age_max">Age max</label>
  <input oninput="updateSlider2()" class="form-range" id="age_max" name="age_max" type=range step="1" min="40" max="60" value="30"><span id="age2">18</span>
  <hr>
  <button type="submit" class="btn btn-outline-secondary d-grid gap-2 d-md-block mx-auto mb-4">Search</button>
</form>