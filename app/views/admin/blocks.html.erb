<% provide(:title, "Blocks") %>
<% content_for :h1, "#{@user.name.capitalize} blocked these users" %>

<%= link_to 'Back to user info', "#", class: 'btn btn-outline-primary mb-2', onclick: "event.preventDefault(); history.back();" %>

<div class="container mt-4">
  <% @blocker_to.each do |block| %>
    <div class="row mb-2" id="<%= dom_id(block.blocked) %>">
      <div class="col-8 mx-auto">
        <div class="card">
          <div class="card-body d-flex align-items-center">
            <%= link_to profile_path(block.blocked), class: "text-decoration-none" do %>
              <img src="<%= block.blocked.avatar %>" class="rounded-circle me-2" style="width: 50px; height: 50px;" alt="User Avatar">
              <span><%= block.blocked.name.capitalize %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= will_paginate @blocker_to, class: 'pagination justify-content-center' %>
</div>

