<% provide(:title, "Admin") %>

<div class="container mt-4">
  <h1 class="text-center">Users</h1>
  <% @users.each do |user| %>
    <div class="row mb-2" id="<%= dom_id(user) %>">
      <div class="col-10 mx-auto">
        <div class="card">
          <div class="card-body d-flex align-items-center">
            <div class="profile-container">
              <%= link_to profile_path(user), class: "text-decoration-none" do %>
                <img src="<%= user.avatar %>" class="rounded-circle me-2" style="width: 50px; height: 50px;" alt="User Avatar">
                <% if user.online? %>
                  <i class="fa-solid fa-circle fa-beat-fade status-icon" style="color: #3ef308;"></i>
                <% end %>
                </div>
                <span><%= user.name.capitalize %></span>
              <% end %>
              <div class="ms-auto">
                <%= link_to send_message_to_profile_path(user), class: "btn btn-outline-primary btn-sm" do %>
                  <i class="fa-solid fa-message"></i>
                <% end %>
                <%= link_to profile_path(user), class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="fa-solid fa-user"></i>
                <% end %>
                <%= link_to user_full_info_path(user), class: "btn btn-outline-success btn-sm" do %>
                  <i class="fa-regular fa-address-card"></i>
                <% end %>

              </div>
              </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= will_paginate @users %>
</div>