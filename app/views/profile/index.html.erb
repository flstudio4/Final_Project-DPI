<h1>This is a list of all the profiles</h1>
<div class="container pb-2">
<% @profiles.order(:bio => :asc).each do |profile| %>
 
<div class="card mb-3 mx-auto" style="max-width: 540px;">
  <div class="row g-0 m-1">
    <div class="col-md-3 mb-0">
      <%= image_tag("#{profile.avatar}", alt: "#{profile.username.capitalize}'s photo", class: "img-fluid rounded-start rounded-end m-2 mb-2") %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= profile.gender[0].capitalize %>, <%= profile.username.capitalize %>, <%= profile.age(profile.dob) %></h5>
        <p class="card-text"><%= profile.country %>, <%= profile.state %>, <%= profile.city %></p>
        <p class="card-text"></p>
        <p class="card-text"></p>
        <p class="card-text"><small class="text-body-secondary"><%= profile.bio %></small></p>
      </div>
    </div>
  </div>
</div>

<% end %>
<%= will_paginate @profiles %>
</div>
